<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="IGCConsWrapper.PopBatWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Создание bat-файла для пополнения"
	Width="392"
	Icon="..\ig48x48.ico"
	Background="#FF7E8BD0"
	Foreground="#FFFFFFFF"
	Height="186">
	<Grid>
		<StackPanel
			Orientation="Vertical">
			<CheckBox
				Name="cb_inettimeout"
				Content="Дополнительно ожидать подключения, в мин (/inettimeout)"
				Foreground="White"
				Margin="8,4" />
			<TextBox
				Name="txt_inettimeout"
				IsEnabled="False"
				Margin="8,4" />
			<CheckBox
				Name="cb_tempinetdir"
				Content="Перенаправить скачивание файлов пополнения в папку"
				Foreground="White"
				Margin="8,4" />
			<DockPanel
				LastChildFill="True">
				<Button
					Name="btn_browse"
					Content="Обзор"
					Width="60"
					IsEnabled="False"
					Margin="8,4,4,4"/>
				<TextBox
					Name="txt_tempinetdir"
					IsEnabled="False"
					Margin="4,4,8,4" />
			</DockPanel>
			<Button
				Name="btn_OK"
				Content="OK"
				Width="100"
				Height="33"
				Margin="8,4" />
		</StackPanel>
	</Grid>
</Window>