<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="IGCConsWrapper.MessageWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Message"
	Height="200"
	Width="400"
	Icon="..\ig48x48.ico"
	ResizeMode="NoResize"
	WindowStyle="SingleBorderWindow"
	Background="#FFF0F0F0">
	<Grid>
		<DockPanel
			LastChildFill="True">
			<Button
				Name="btn_OK"
				Content="OK"
				Width="60"
				Height="30"
				Margin="8,4,8,8"
				HorizontalAlignment="Center"
				DockPanel.Dock="Bottom" />
			<TextBox
				Name="tb_message"
				Margin="8,8,8,4"
				DockPanel.Dock="Top"
				IsReadOnly="True"
				BorderThickness="0"
				VerticalScrollBarVisibility="Auto" />
		</DockPanel>
	</Grid>
</Window>